    <body>
        <header id="header-alt" class="clearfix" data-ma-theme="purple">
          <ul class="h-inner clearfix">
                          <li class="hi-trigger ma-trigger" data-ma-action="sidebar-open" data-ma-target="#sidebar">
                              <div class="line-wrap">
                                  <div class="line top"></div>
                                  <div class="line center"></div>
                                  <div class="line bottom"></div>
                              </div>
                          </li>

                          <li class="hi-logo hidden-xs">
                            {{#if org}}
                              <a href="/">{{org.name}} - VolunteerCheck</a>
                            {{else}}
                              <a href="/">VolunteerCheck</a>
                            {{/if}}
                          </li>
                      </ul>

            <nav class="ha-menu">
                <ul>
                    <li {{#is title "Review Applications"}} class="active"{{/is}}><a href="/">Review Applications</a></li>
                    {{#if user}}
                      {{#if user.org}}
                        {{#if user.admin}}
                          <li {{#is title "Organization Settings"}} class="active"{{/is}}><a href='/orgs/{{user.org}}/edit'>Organization Settings</a></li>
                          <li {{#is title "Organization Survey"}} class="active"{{/is}}><a href='/orgs/{{user.org}}/survey'>Organization Survey</a></li>
                        {{/if}}
                      {{else}}
                        {{#if user.admin}}
                          <li {{#is title "New Organization"}} class="active"{{/is}}><a href='/orgs/new'>Setup Organization</a></li>
                        {{/if}}
                      {{/if}}
                    {{/if}}

                    {{#if user}}
                      <li class="pull-right"><a href="/logout">Logout</a></li>
                    {{/if}}
                </ul>
            </nav>
        </header>

        <section id="main">
          {{{body}}}
        </section>

        <footer id="footer">
            Copyright &copy; 2017 Vettit
        </footer>

        <!-- Page Loader -->
        <div class="page-loader">
            <div class="preloader pls-blue">
                <svg class="pl-circular" viewBox="25 25 50 50">
                    <circle class="plc-path" cx="50" cy="50" r="20" />
                </svg>

                <p>Please wait...</p>
            </div>
        </div>

